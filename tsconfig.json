{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "h",
    "allowJs": true,
    "baseUrl": "./",
    "strictPropertyInitialization": false,
    "preserveConstEnums": true,
    "strictNullChecks": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["dom", "es2015", "es5", "es6", "dom.iterable", "scripthost", "es2015.proxy"]
  }
}
