{
  "name": "perry",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "test": "lerna run test",
    "test:ci": "lerna run test",
    "lint": "lerna run lint",
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --no-prerender --clean --template src/index.ejs --service-worker false",
    "serve": "npm run build && preact serve",
    "dev": "preact watch --template src/index.ejs",
    "lerna:build": "lerna run build"
  },
  "keywords": [],
  "contributors": [
    "Armando Magalhaes <armando.mag95@gmail.com> (https://armand1m.github.io)",
    "Guilherme Lima <guilhermelimak@gmail.com> (https://github.com/guilhermelimak)",
    "Vitor Margis <vitor.margis@gmail.com> (https://github.com/vitormargis)",
    "Jean Baudin <baudin.jean@gmail.com> (https://github.com/jackTheRipper)"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.1.1",
    "awesome-typescript-loader": "^3.5.0",
    "eslint": "^5.15.1",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.4",
    "jest": "^21.2.1",
    "lerna": "^3.13.1",
    "node-sass": "^4.5.3",
    "preact-cli": "^2.0.2",
    "preact-cli-plugin-typescript": "^0.2.2",
    "preact-render-to-string": "^3.7.0",
    "preact-widget-scripts": "^0.6.0",
    "sass-loader": "^6.0.6",
    "ts-jest": "^22.4.6",
    "typescript": "^3.3.3333"
  },
  "dependencies": {
    "grid-styled": "^4.1.1",
    "preact": "^8.4.2",
    "preact-compat": "^3.18.4",
    "rebass": "^2.0.0-7",
    "styled-components": "^3.3.2",
    "yup": "^0.26.10"
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "/src/.*\\.test\\.(ts|tsx)$",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|less)$": "identity-obj-proxy",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "@/(.*)$": "<rootDir>/src/$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/setupTests.js"
  }
}
